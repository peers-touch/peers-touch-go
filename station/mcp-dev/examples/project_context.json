{
  "project_id": "peers-touch",
  "name": "Peers Touch Station",
  "language": "go",
  "framework": "hertz",
  "version": "1.0.0",
  "description": "A distributed system for peer-to-peer communication and service discovery",
  "architecture": {
    "type": "microservices",
    "patterns": ["event-driven", "service-mesh"],
    "components": ["station", "subserver", "mcp"]
  },
  "coding_standards": {
    "naming_conventions": {
      "functions": "camelCase",
      "variables": "camelCase",
      "constants": "UPPER_SNAKE_CASE",
      "types": "PascalCase"
    },
    "line_length": 120,
    "indentation": "tabs",
    "error_handling": "wrap_errors",
    "testing": {
      "coverage_threshold": 80,
      "framework": "standard"
    }
  },
  "dependencies": {
    "required": [
      "github.com/cloudwego/hertz",
      "gorm.io/gorm",
      "gorm.io/driver/sqlite"
    ],
    "optional": [
      "github.com/stretchr/testify"
    ]
  },
  "ai_agent_config": {
    "model": "gpt-4",
    "temperature": 0.7,
    "max_tokens": 2000,
    "system_prompt": "You are a Go developer working on the Peers Touch project. Follow the project's coding standards and architectural patterns.",
    "context_window": 4096
  }
}